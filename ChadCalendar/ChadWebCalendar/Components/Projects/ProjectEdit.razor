@using ChadWebCalendar.Data.Services
@inject ProjectService projectService
@inject NavigationManager NavigationManager
@inject IModalService modal
@attribute [Authorize]


<div class="form-group">
    <label>Название события</label>
    <input class="form-control" type="text" placeholder="" @bind="project.Name" style="width: 250px;">
</div>
<div class="form-group">
    <label>Описание</label>
    <textarea class="form-control" type="text" placeholder="" @bind="project.Description" style="width: 250px;"></textarea>
</div>
<div class="form-group">
    <label asp-for="NRepetitions" class="control-label">Количество повторений в неделю</label>
    <input class="form-control" type="number" @bind="project.NRepetitions" min="0" style="width: 250px;">
    <span asp-validation-for="NRepetitions" class="text-danger"></span>
</div>
<div class="form-group">
    <label>Частота</label>
    <select class="form-select" style="width: 250px" @bind="project.Frequency">
        <option>Никогда</option>
        <option>Каждый день</option>
        <option>Каждую неделю</option>
        <option>Каждый месяц</option>
    </select>
</div>
<div class="form-group">
    <label>Введите время дедлайна</label>
    <input class="form-control" type="datetime-local" @bind="project.Deadline" @bind:format="yyyy-MM-ddTHH:mm" style="width: 250px;" />
</div>
<div class="form-group">
    <label>Выберите иконку</label>
    <select class="form-select" style="width: 100px" @bind="project.IconNumber">
        <option selected>😍</option>
        <option>🤠</option>
        <option>😀</option>
        <option>⛹</option>
        <option>☕</option>
        <option>⌚</option>
        <option>😈</option>
    </select>
</div>

<div class="form-group">
    @if (isHaveError)
    {
        <label>Введенные данные некорректны, попробуйте еще раз</label>
    }
</div>

<button @onclick="editProject" class="btn btn-primary">Готово</button>
<button @onclick="deleteProject" class="btn btn-danger">Удалить проект</button>




@code {
    [CascadingParameter] private Task<AuthenticationState> authenticationState { get; set; }
    [Parameter]
    public int? projectId { get; set; }
    Data.Project project;
    bool isHaveError = false;
    string userName;
    protected override async System.Threading.Tasks.Task OnInitializedAsync()
    {
        userName = authenticationState.Result.User.Identity.Name;
        project = projectService.GetProjectById(projectId);
    }
    void redirectToIndex()
    {
        NavigationManager.NavigateTo("/", true);
    }
    void editProject()
    {
        if (projectService.Edit(project.Id, userName))
        {
            OnInitializedAsync();
            redirectToIndex();
        }
    }
    void deleteProject()
    {
        projectService.Delete(project.Id);
        redirectToIndex();
    }
}

