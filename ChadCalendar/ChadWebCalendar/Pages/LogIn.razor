@page "/login"
@using ChadWebCalendar.Data.Models
@inherits LoginModel

<div class="row justify-content-between">
    <div id="carouselExampleInterval" class="carousel slide col-4" data-bs-ride="carousel">
        <div class="carousel-inner" style="width: 650px; overflow: hidden;">
            <div class="carousel-item active" data-bs-interval="15000">
                <img src="/img/start.png" class="d-block" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/2Slide.png" class="d-block" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/3slide.png" class="d-block" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/4slide.png" class="d-block" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/5slide.png" class="d-block" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/6slide.png" class="d-block" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/12.png" class="d-block" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/img/end.png" class="d-block" alt="...">
            </div>
            
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Предыдущий</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Следующий</span>
            </button>
        </div>
    </div>

    <div class="col-4" style="margin: 50px">
        <h1>Войдите в систему</h1>
        <EditForm Model="LoginData" OnValidSubmit="LoginAsync">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-floating mb-3">

                <InputText id="login" @bind-Value="LoginData.model.Login" class="form-control" placeholder="Login" />
                <label for="login">Логин</label>
            </div>
            <div class="form-floating">

                <InputText id="password" @bind-Value="LoginData.model.Password" class="form-control" placeholder="Password" type="password" />
                <label for="password">Пароль</label>
            </div>
            <p class="my-4">
                <button type="submit" class="btn btn-primary">Войти</button>
                <a href="/register" type="button" class="btn btn-primary">Регистрация</a>
            </p>
            
        </EditForm>
        
    </div>


</div>
<style>
    .carousel-inner img{
        width: 100%;
    }
</style>