@page "/scheduler"

<RadzenScheduler Data="@data" TItem="DataItem" StartProperty="Start" EndProperty="End" TextProperty="Text" Style="height: 800px">
    <ChildContent>
        <RadzenMonthView />
        <RadzenDayView />
        <RadzenWeekView />
    </ChildContent>
</RadzenScheduler>

@code {


    class DataItem
    {
        public DateTime Start { get; set; }
        public DateTime End { get; set; }
        public string Text { get; set; }
    }

    DataItem[] data = new DataItem[]
    {
      new DataItem
      {
        Start = DateTime.Today,
        End = DateTime.Today.AddDays(1),
        Text = "Birthday"
      },
      new DataItem
      {
        Start = DateTime.Now,
        End = DateTime.Today.AddDays(3),
        Text = "Экзамен"
      },
    };
}
