
@{
    ViewData["Title"] = "AddProject";
}
@model ChadCalendar.Models.Project


<form action="/project/addproject" method="post">
    <div class="form-group">
        <label>Name of Project</label>
        <input type="text" placeholder="Name" asp-for="Name">
    </div>
    <div class="form-group">
        <label>Enter description</label>
        <textarea type="text" placeholder="Description" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <label>Enter repeats on week</label>
        <input type="number" asp-for="NRepetitions" min="0" max="20">
    </div>
    <div class="form-group">
        <label>Повторять раз в </label>
        <select asp-for="Frequency">
            <option disabled>Частота</option>
            <option>день</option>
            <option>неделю</option>
            <option>месяц</option>
        </select>
    </div>
    <div class="form-group">
        <label>Enter deadline time</label>
        <input type="datetime-local" asp-for="Deadline" />
    </div>
    <div class="form-group">
        <label>Select IconNumber</label>
        <select asp-for="IconNumber">
            <option disabled>Выберите смайл для проекта</option>
            <option>&#128640;</option>
            <option>&#128293;</option>
            <option>&#10084;</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>