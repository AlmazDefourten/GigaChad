@model ChadCalendar.ViewModels.LoginModel

<h2>Авторизация</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="mb-3 form-group">
        <label asp-for="Login">Введите логин</label>
        <input asp-for="Login" type="text" class="form-control">
        <span asp-validation-for="Login" class="text-danger"></span>
        <br />
        <label asp-for="Password">Введите пароль</label>
        <input asp-for="Password" type="password" class="form-control">
        <span asp-validation-for="Password" class="text-danger"></span>
        <br />
    </div>
    <div class="form-group">
        <input type="submit" value="Log in" class="btn btn-outline-dark" />
    </div>
    <a asp-action="Register" asp-controller="Account">Регистрация</a>
</form>