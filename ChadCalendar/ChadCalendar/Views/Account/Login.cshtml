@model ChadCalendar.ViewModels.LoginModel


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Авторизация</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<h2 style="color: white; text-align:center; padding-top: 10%">Войдите в аккаунт</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="login-form">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 col-md-10 form-group top-input">
            <input asp-for="Login" type="text" class="form-control" placeholder="Логин">
            <span asp-validation-for="Login" class="text-danger"></span>
            <br />
            <input asp-for="Password" type="password" class="form-control" placeholder="Пароль">
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />
        </div>

        <div class="login_register">
            <div class="form-group login">
                <input type="submit" value="Логин" class="btn btn-light" />
                <a asp-action="Register" asp-controller="Account" class="btn btn-light">Регистрация</a>
            </div>
        </div>
    </div>
</form>