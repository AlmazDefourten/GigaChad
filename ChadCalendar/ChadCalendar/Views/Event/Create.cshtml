@{
    ViewData["Title"] = "Создание события";
}
@model ChadCalendar.Models.Event

<form action="/event/create" method="post">
    <div class="form-group">
        <label>Название события</label>
        <input type="text" placeholder="" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Описание</label>
        <textarea type="text" placeholder="" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <label>Частота</label>
        <select asp-for="Frequency">
            <option>Никогда</option>
            <option>Каждый день</option>
            <option>Каждую неделю</option>
            <option>Каждый месяц</option>
        </select>
    </div>
    <div class="form-group">
        <label>Начинается</label>
        <input type="datetime-local" asp-for="StartsAt" />
        <span asp-validation-for="StartsAt"></span>
    </div>
    <div class="form-group">
        <label>Заканчивается</label>
        <input type="datetime-local" asp-for="FinishesAt" />
        <span asp-validation-for="FinishesAt"></span>
    </div>
    <div class="form-group">
        <label>Напомнить за</label>
        <input type="number" asp-for="RemindNMinutesBefore" min="0">
        <label>минут</label>
    </div>
    <div class="form-group">
        @if (ViewBag.Error != null)
        {
            <label>Введенные данные некорректны, попробуйте еще раз</label>
        }
    </div>

    <button type="submit" class="btn btn-primary">Готово</button>
</form>

